// часть 1

// Способ 1: Инициализация при создании
let array1 = [1, 2, 3, 4, 5, 6, 7];

// Способ 2: Создание пустого массива и добавление элементов
let array2 = [];
array2.push(8, 9, 10);

// Способ 3: Создание с помощью конструктора
let array3 = new Array(11, 12, 13);

// часть 2

console.log(array1[4]); // Вывод 5-го члена (индекс 4)

array1[4] = 100; // Изменение 5-го члена

// часть 3

let arrayLength = array1.length;
console.log("Длина массива:", arrayLength);

// Добавление события наведения мыши (не работает в консоли, нужна HTML-страница)
// array1.forEach(element => {
